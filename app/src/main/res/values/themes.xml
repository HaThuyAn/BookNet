<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookNet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_tan</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/cream</item>
    </style>

    <style name="Theme.BookNet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookNet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookNet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>